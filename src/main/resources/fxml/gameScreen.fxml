                styleClass="current-player-text"/>

        <StackPane fx:id="currentPlayerPane" alignment="CENTER">
            <Polygon fx:id="currentPlayerBox"
                    styleClass="parallelogram"
                    fill="#5050A0"
                    stroke="black"
                    strokeWidth="8">
                <points>
                    <Double fx:value="45.0"/>   <Double fx:value="0.0"/>
                    <Double fx:value="365.0"/>  <Double fx:value="0.0"/>
                    <Double fx:value="320.0"/>  <Double fx:value="80.0"/>
