                        <Double fx:value="60.0" />
                    </points>
                </Polygon>
                <Label fx:id="nameLabel" styleClass="player-label" />
            </StackPane>

            <!-- SCORE -->
            <StackPane>
                <Polygon fx:id="scoreBox" styleClass="parallelogram">
                    <points>
                        <Double fx:value="0.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="100.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="135.0" />
                        <Double fx:value="60.0" />
                        <Double fx:value="35.0" />
                        <Double fx:value="60.0" />
                    </points>
                </Polygon>
                <Label fx:id="scoreLabel" styleClass="player-label" />
            </StackPane>

            <!-- LONGEST ROAD -->
            <StackPane>
                <Polygon fx:id="longestRoadBox" styleClass="parallelogram">
                    <points>
                        <Double fx:value="0.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="60.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="95.0" />
                        <Double fx:value="60.0" />
                        <Double fx:value="35.0" />
                        <Double fx:value="60.0" />
                    </points>
                </Polygon>
                <Label fx:id="longestRoadLabel" styleClass="player-label" />
            </StackPane>

            <!-- CLEANEST ENV -->
            <StackPane>
                <Polygon fx:id="cleanestEnvironmentBox" styleClass="parallelogram">
                    <points>
                        <Double fx:value="0.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="60.0" />
                        <Double fx:value="0.0" />
                        <Double fx:value="95.0" />
