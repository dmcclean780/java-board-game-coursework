<Pane fx:id="rootPane"
    prefHeight="864.0"
    prefWidth="1536.0"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.view.PlayerController">

    <StackPane fx:id="playerPane"
        xmlns="http://javafx.com/javafx"
        xmlns:fx="http://javafx.com/fxml"
        alignment="CENTER">

        <HBox alignment="CENTER_LEFT"
            spacing="2">

            <!-- NAME -->
            <StackPane>
                <Polygon fx:id="colorBox" styleClass="parallelogram">
                    <points>
                        <Double fx:value="0.0" />
