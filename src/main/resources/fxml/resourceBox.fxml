<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Polygon?>
<?import javafx.scene.shape.Rectangle?>
<?import javafx.geometry.Pos?>
<?import java.lang.Double?>
<?import javafx.scene.control.Button?>

<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.shape.Circle?>
<?import javafx.scene.layout.Region?>


<Pane fx:id="rootPane"
    prefHeight="864.0"
    prefWidth="1536.0"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.example.view.ResourceBoxController">

    <StackPane prefHeight="60" alignment="CENTER">
        <Polygon fx:id="resourcePolygon" stroke="black" strokeWidth="4">
            <points>
                <Double fx:value="25.0" />
                <Double fx:value="0.0" />
                <Double fx:value="185.0" />
                <Double fx:value="0.0" />
                <Double fx:value="160.0" />
                <Double fx:value="42.0" />
                <Double fx:value="0.0" />
                <Double fx:value="42.0" />
            </points>
        </Polygon>
        <HBox alignment="CENTER" spacing="5" style="-fx-padding: 0 35 0 30;">
            <!-- Symbol on the left -->
            <Label fx:id="resourceSymbol" styleClass="resource-type"
                style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;"/>
            
            <Region HBox.hgrow="ALWAYS"/>
            
            <HBox alignment="CENTER_RIGHT" spacing="10">
                <Label fx:id="resourceName" styleClass="resource-type"
                    style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;"/>
                <Label fx:id="resourceCount" styleClass="resource-counter"
                    style="-fx-font-size: 20; -fx-text-fill: white; -fx-font-weight: bold;"/>
            </HBox>
        </HBox>


    </StackPane>

</Pane>